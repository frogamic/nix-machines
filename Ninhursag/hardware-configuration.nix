  };

  hardware.trackpoint = {
    enable = lib.mkDefault true;
    emulateWheel = lib.mkDefault config.hardware.trackpoint.enable;
  };

  services.xserver.monitorSection = ''
    DisplaySize 310 175
  '';

  services.fwupd = {
    enable = true;
    enableTestRemote = true;
  };
