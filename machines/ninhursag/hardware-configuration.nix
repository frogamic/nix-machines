      userControlled.enable = true;
      configFile = {
        path = "/etc/wpa_supplicant.conf";
        writable = true;
      };
    };
  };

  hardware.trackpoint = {
    enable = lib.mkDefault true;
    emulateWheel = lib.mkDefault config.hardware.trackpoint.enable;
  };

