{ config, lib, pkgs, ... } : {
  imports = [
    ../../services/hardware/amdcpu.nix
    ../../services/hardware/amdgpu.nix
    ../../services/hardware/ssd.nix
    ../../services/hardware/backlight.nix
    <nixpkgs/nixos/modules/installer/scan/not-detected.nix>
  ];

  boot = {
    initrd.availableKernelModules = [
      "nvme"
      "ehci_pci"
      "xhci_pci"
      "usb_storage"
      "sd_mod"
      "rtsx_pci_sdmmc"
    ];
